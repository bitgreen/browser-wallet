{
"manifest_version": 2,
"name": "BitgreenWallet",
"description": "Bitgreen Browser Wallet",
"version": "0.1",
"browser_action": {
    "default_icon": "icon.png",
    "default_popup": "window.html"
    },
"permissions": [
    "clipboardRead",
    "clipboardWrite",
    "storage",
    "tabs",
    "scripting",
    "https://testnet.bitg.org:9443/",
    "https://mainnet.bitg.org:9443/",
    "https://testnet.bitgreen.org:9443/",
    "https://mainnet.bitg.org:9443/"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentscript.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
"content_security_policy": "script-src 'self' 'wasm-eval'; object-src 'self'"
}